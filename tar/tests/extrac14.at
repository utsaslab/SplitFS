# Check that 'tar -x -C FOO' follows FOO if FOO is a symbolic link.

AT_SETUP([extract -C symlink])
AT_KEYWORDS([extract extrac14 chdir])

AT_TAR_CHECK([
mkdir dest
ln -s dest symlink
echo foo >foo
tar -cf archive.tar foo &&
tar -xf archive.tar -C symlink --warning=no-timestamp &&
cmp foo dest/foo
],
[0],[],[],[],[],[gnu])

AT_CLEANUP
